<div style="margin: 100px 200px;">
  <% @posts.each do |post| %>
    <div style="margin-bottom: 20px;background: #f2f2f2;">
      <div>
        <h1>
          <%= post.title %>
        </h1>
      </div>
      <div style="text-align: justify;">
        <p>
          <%= post.body %>
        </p>
      </div>
      <div style="margin-left: 20px;">
        <% post.comments.each do |comment| %>
          <p style="font-size: 12px;line-height: 14px;">
            <%= comment.body %>
          </p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
